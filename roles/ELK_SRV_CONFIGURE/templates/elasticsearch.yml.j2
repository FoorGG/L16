# Elasticsearch configuration generated by Ansible

cluster.name: "elk-cluster"
node.name: "{{ inventory_hostname }}"
network.host: 0.0.0.0

xpack.security.enabled: true

xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.keystore.path: {{ elasticsearch_certs_path }}/{{ elasticsearch_http_p12 }}
xpack.security.http.ssl.truststore.path: {{ elasticsearch_certs_path }}/{{ elasticsearch_http_p12 }}
xpack.security.http.ssl.certificate_authorities: [ "{{ elasticsearch_certs_path }}/http_ca.crt" ]

xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.keystore.path: {{ elasticsearch_certs_path }}/{{ elasticsearch_transport_p12 }}
xpack.security.transport.ssl.truststore.path: {{ elasticsearch_certs_path }}/{{ elasticsearch_transport_p12 }}
xpack.security.transport.ssl.certificate_authorities: [ "{{ elasticsearch_certs_path }}/http_ca.crt" ]
xpack.security.transport.ssl.verification_mode: certificate

discovery.type: single-node
