# Elasticsearch configuration generated by Ansible

cluster.name: "elk-cluster"
node.name: "{{ inventory_hostname }}"
network.host: 0.0.0.0

xpack.security.enabled: true

xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.keystore.path: "{{ elasticsearch.certs_path }}/{{ elasticsearch.http_keystore }}"
xpack.security.http.ssl.truststore.path: "{{ elasticsearch.certs_path }}/{{ elasticsearch.http_keystore }}"

xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.keystore.path: "{{ elasticsearch.certs_path }}/{{ elasticsearch.transport_keystore }}"
xpack.security.transport.ssl.truststore.path: "{{ elasticsearch.certs_path }}/{{ elasticsearch.transport_keystore }}"
