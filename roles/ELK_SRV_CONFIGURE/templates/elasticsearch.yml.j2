# Elasticsearch configuration generated by Ansible

path.data: {{ j2.templates.elasticsearch.path.data }}
path.logs: {{ j2.templates.elasticsearch.path.logs }}

xpack.security.enabled: {{ j2.templates.elasticsearch.xpack.security_enabled | lower }}
xpack.security.enrollment.enabled: {{ j2.templates.elasticsearch.xpack.enrollment_enabled | lower }}

xpack.security.http.ssl:
  enabled: {{ j2.templates.elasticsearch.xpack.http.ssl.enabled | lower }}
  keystore.path: {{ j2.templates.elasticsearch.xpack.http.ssl.keystore_path }}

xpack.security.transport.ssl:
  enabled: {{ j2.templates.elasticsearch.xpack.transport.ssl.enabled | lower }}
  keystore.path: {{ j2.templates.elasticsearch.xpack.transport.ssl.keystore_path }}
  truststore.path: {{ j2.templates.elasticsearch.xpack.transport.ssl.truststore_path }}

xpack.security.transport.ssl.verification_mode: {{ j2.templates.elasticsearch.xpack.transport.verification.mode }}

cluster.initial_master_nodes: {{ j2.templates.elasticsearch.cluster.initial.master.nodes }}

http.host: {{ j2.templates.elasticsearch.http.host }}


