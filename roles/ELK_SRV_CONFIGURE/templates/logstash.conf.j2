# Logstash configuration generated by Ansible

input {
  beats {
    port => 5044
    ssl => true
    ssl_certificate_authorities => ["{{ logstash_certs_path }}/{{ logstash_http_ca_crt }}"]
  }
}

output {
  elasticsearch {
    hosts => {{ logstash_elasticsearch_hosts }}
    user => "{{ logstash_user }}"
    password => "{{ logstash_password }}"
    cacert => "{{ logstash_certs_path }}/{{ logstash_http_ca_crt }}"
    ssl => true
  }
}