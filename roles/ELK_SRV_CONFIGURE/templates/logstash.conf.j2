# Logstash configuration generated by Ansible

input {
  beats {
    port => 5044
    ssl => true
    ssl_certificate_authorities => ["{{ logstash.certs_path }}/{{ logstash.ca_cert }}"]
  }
}

output {
  elasticsearch {
    hosts => {{ logstash.elasticsearch_hosts }}
    user => "{{ logstash.user }}"
    password => "{{ logstash.password }}"
    cacert => "{{ logstash.certs_path }}/{{ logstash.ca_cert }}"
    ssl => true
  }
}